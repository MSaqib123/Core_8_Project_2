@model List<Product>
<div class="container">

    <div class="d-flex justify-content-between align-content-center align-items-center my-4 ">
        <h1>Categories</h1>
        <a class="btn btn-primary" asp-action="Upsert" asp-controller="Product">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Tital</td>
                <td>Author</td>
                <td>ISBN</td>
                <td>Price</td>
                <td>Category</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.ISBN</td>
                    <td>@item.Price</td>
                    <td>@item.Category.Name</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Product" asp-action="Upsert" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
